<h1>Listing Articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <!-- it creates a route to the single article -->
      <td><%= link_to 'Show', article_path(article)  %></td>
    </tr>
  <% end %>
</table>
